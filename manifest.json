{
  "manifest_version": 3,
  "name": "AI Video Intelligence Suite",
  "version": "1.0.0",
  "description": "Process YouTube videos through AI Studio and NotebookLM automatically. Build your AI-powered knowledge base 10x faster.",
  "key": "",
  "author": "Your Name",
  
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "tabs",
    "scripting",
    "identity",
    "cookies",
    "alarms",
    "contextMenus",
    "webRequest",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://aistudio.google.com/*",
    "https://notebooklm.google.com/*",
    "https://www.googleapis.com/*",
    "https://*.usercontent.goog/*"
  ],
  
  "oauth2": {
    "client_id": "998509408180-k62olkpaolebn62dvm386nrq6gicuour.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.readonly",
      "https://www.googleapis.com/auth/drive.appdata",
      "profile",
      "email"
    ]
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AI Video Intelligence Suite"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content-scripts/ai-studio.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://*.usercontent.goog/*"],
      "js": ["content-scripts/iframe-bridge.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content-scripts/youtube.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["content-scripts/notebooklm.js"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "styles/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
